{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@environments/*":["src/environments/*"], //Alias a Environments
    },
    "moduleResolution": "node",
    "module": "ES2022", // Cambiado a un valor compatible
    "target": "ES2022", // Asegúrate de que el target también sea compatible
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}